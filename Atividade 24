//Atividade 24
#include <stdlib.h>
#include <stdio.h>
#include <locale.h>
#include <time.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	
	long int binario, numero;
	
	int decimal = 0, base = 1, resto;
	
	printf("Insira o numero em binario: ");
	scanf("%ld", &numero);
	
	binario = numero;
	
	while (numero > 0) {
		resto = numero % 10;
		decimal = decimal + resto * base;
		numero = numero / 10;
		base = base * 2;;
	}
	
	printf("\n%ld em decimal Ã© %i",binario, decimal);
	return 0;
}
