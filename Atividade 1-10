Atividade-7
1: #include <stdio.h>
2:
3: int main() {
4: float celsius, fahrenheit;
5:
6: printf("Digite a temperatura em Celsius: ");
7: scanf("%f", &celsius);
8:
9: fahrenheit = (celsius * 9 / 5) + 32;
10:
11: printf("A temperatura em Fahrenheit é %.2f.\n", fahrenheit);
12:
13: return 0;
14: }
=================================
Atividade-8
1: #include <stdio.h>
2:
3: int main() {
4: int numero;
5:
6: printf("Digite um número para exibir a tabuada: ");
7: scanf("%d", &numero);
8:
9: printf("Tabuada do número %d:\n", numero);
10: for (int i = 1; i <= 10; i++) {
11: printf("%d x %d = %d\n", numero, i, numero * i);
12: }
13:
14: return 0;
15: }
===============================
Atividade-9
1: #include<stdio.h>
2:
3: int main()
4: {
5: int fat, n;
6: printf("Insira um valor para o qual deseja calcular seu fatorial: ");
7: scanf("%d", &n);
8:
9: for(fat = 1; n > 1; n = n - 1){
10:
11: fat = fat * n;}
12:
13: printf("\nFatorial calculado: %d", fat);
14: return 0;
15: }
===============================
Atividade-10
1: #include <stdio.h>
2:
3: int main() {
4: int contador, numero = 10;
5: printf("A contagem regressiva: ");
6: for (contador = 0; contador < numero; numero = numero - 1) {
7: printf("%d ", numero);
8: }
9: return 0;
10: }
